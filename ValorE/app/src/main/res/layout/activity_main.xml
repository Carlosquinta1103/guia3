<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtValor"
        android:layout_width="274dp"
        android:layout_height="86dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:hint="Ingrese El Valor Entero"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnmostrar"
        android:layout_width="198dp"
        android:layout_height="65dp"
        android:layout_marginTop="72dp"
        android:text="Mostrar"
        app:layout_constraintEnd_toEndOf="@+id/edtValor"
        app:layout_constraintStart_toStartOf="@+id/edtValor"
        app:layout_constraintTop_toBottomOf="@+id/edtValor" />

    <TextView
        android:id="@+id/txtrespuesta"
        android:layout_width="264dp"
        android:layout_height="30dp"
        android:layout_marginTop="48dp"
        android:text="-"
        app:layout_constraintEnd_toEndOf="@+id/btnmostrar"
        app:layout_constraintStart_toStartOf="@+id/btnmostrar"
        app:layout_constraintTop_toBottomOf="@+id/btnmostrar" />

</androidx.constraintlayout.widget.ConstraintLayout>